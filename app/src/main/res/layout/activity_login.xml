<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="loginVm"
            type="com.example.hellokt.ui.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/SandyBrown">

        <TextView
            android:id="@+id/tv_login_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:text="手机号"
            android:textColor="#F7F6F5"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_edit_text_bg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/purple_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login_phone_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="+86"
            android:textColor="#FBFAF8"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/v_edit_text_bg"
            app:layout_constraintLeft_toLeftOf="@id/v_edit_text_bg"
            app:layout_constraintTop_toTopOf="@id/v_edit_text_bg" />

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="76dp"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="phone|number"
            android:maxLength="11"
            android:textColor="#FBFAF8"
            android:textColorHint="#9C7EA0"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/v_edit_text_bg"
            app:layout_constraintLeft_toLeftOf="@id/v_edit_text_bg"
            app:layout_constraintRight_toRightOf="@id/v_edit_text_bg"
            app:layout_constraintTop_toTopOf="@id/v_edit_text_bg" />

        <View
            android:id="@+id/v_code_bg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/purple_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_edit_text_bg" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="phone|number"
            android:maxLength="11"
            android:textColor="#FBFAF8"
            android:textColorHint="#9C7EA0"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/v_code_bg"
            app:layout_constraintLeft_toLeftOf="@id/v_code_bg"
            app:layout_constraintRight_toRightOf="@id/v_code_bg"
            app:layout_constraintTop_toTopOf="@id/v_code_bg" />


        <Button
            android:id="@+id/login_by_phone"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/purple_btn"
            android:onClick="@{loginVm::onClickLogin}"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_code_bg" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>